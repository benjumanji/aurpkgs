#!/bin/bash

[ -f /etc/conf.d/tomcat6 ] && . /etc/conf.d/tomcat6

. /etc/rc.conf
. /etc/rc.d/functions

JSVC_BIN='/usr/share/tomcat6/bin/jsvc'
PID_FILE='/var/run/tomcat6.pid'
TOMCAT_DIR='/usr/share/tomcat6'

case "$1" in
  start)
    stat_busy "Starting Tomcat"
    $JSVC_BIN \
      -user tomcat6 \
      -Dcatalina.home=$TOMCAT_DIR \
      -Dcatalina.base=$TOMCAT_DIR \
      -Djava.io.tmpdir=/tmp \
      -wait 10 \
      -pidfile $PID_FILE \
      -errfile $ERROR_FILE \
      $CATALINA_OPTS \
      -cp $TOMCAT_DIR/bin/commons-daemon.jar:$TOMCAT_DIR/bin/bootstrap.jar \
      org.apache.catalina.startup.Bootstrap

    if [ $? -gt 0 ]; then
      stat_fail
    else
      add_daemon tomcat
      stat_done
    fi
    ;;
  stop)
    stat_busy "Stopping Tomcat"
    $JSVC_BIN \
      -stop \
      -pidfile $PID_FILE \
      org.apache.catalina.startup.Bootstrap

    if [ $? -gt 0 ]; then
      stat_fail
    else
      rm_daemon tomcat
      stat_done
    fi
    ;;
  restart)
    $0 stop
    sleep 1
    $0 start
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"
esac
exit 0
